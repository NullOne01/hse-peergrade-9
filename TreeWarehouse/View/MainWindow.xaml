<Window x:Class="TreeWarehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeWarehouse"
        xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Сохранить" Command="{Binding SaveWarehouseCommand}" CommandParameter="{Binding CurrentWarehouse}"></MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid Margin="233,25,0,0" ItemsSource="{Binding Path=CurrentFolder.Products}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название товара" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Артикул" Binding="{Binding VendorCode}" />
                <DataGridTextColumn Header="Количество" Binding="{Binding StockNum}" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Cost}" />
            </DataGrid.Columns>
        </DataGrid>
        <TreeView Margin="0, 25, 0, 0" HorizontalAlignment="Left" Width="233" ItemsSource="{Binding Path=CurrentWarehouse.Folders}">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить раздел" Command="{Binding Path=AddRootItemCommand}" />
                </ContextMenu>
            </TreeView.ContextMenu>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=SubFolders}">
                    <TextBox Style="{StaticResource SelectableTextBlockLikeStyle}" IsReadOnly="False"
                        Text="{Binding Name}" Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                        <TextBox.ContextMenu>
                            <ContextMenu Tag="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Добавить раздел"
                                          Command="{Binding Path=PlacementTarget.Tag.DataContext.AddTreeItemCommand, 
                                    RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          CommandParameter="{Binding}" />
                                <MenuItem Header="Удалить раздел"
                                          Command="{Binding Path=PlacementTarget.Tag.DataContext.RemoveTreeItemCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          CommandParameter="{Binding}" />
                            </ContextMenu>
                        </TextBox.ContextMenu>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <cmd:EventToCommand
                                    Command="{Binding Path=DataContext.SelectTreeItemCommand, 
                                        RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                    CommandParameter="{Binding}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>